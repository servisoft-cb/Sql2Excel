<Window x:Class="Sql2Excel.Controllers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sql2Excel"
        mc:Ignorable="d"
        Title="Gerador Excel" Height="160" Width="342">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Name="txtStatus" Text="Processando dados, aguarde..." Margin="0,0,0,10" TextAlignment="Center"/>
            <ProgressBar Name="pbStatus" IsIndeterminate="True" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
